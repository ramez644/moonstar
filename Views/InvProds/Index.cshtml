@model IEnumerable<MoonStar.Models.InvProd>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.invoice.inname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product.ProductName)
        </th>

       
         
        <th>
            @Html.DisplayNameFor(model => model.CustName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.product.UnitPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.invoice.inname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product.ProductName)
        </td>

        
        <td>
            @Html.DisplayFor(modelItem => item.CustName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product.UnitPrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
